<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/M.Green"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/iv_number_border"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hadeth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="1"
            android:textColor="@color/M.Green"
            app:layout_constraintTop_toTopOf="@+id/iv_number_border"
            app:layout_constraintEnd_toEndOf="@id/iv_number_border"
            app:layout_constraintStart_toStartOf="@id/iv_number_border"
            app:layout_constraintBottom_toBottomOf="@id/iv_number_border"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/arabicmid"
            android:text="الفاتحة"
            android:textSize="22dp"
            app:layout_constraintStart_toEndOf="@+id/iv_number_border"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>